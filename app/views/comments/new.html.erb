<h2>Make a comment</h2>

<form action="<%= comments_url %>" method="post">
  <input type="hidden" name="authenticity_token"
            value="<%= form_authenticity_token %>">

  <label for="Comment">Comment
    <textarea name="comment[body]"><%= @comment.body %></textarea>
  </label>

  <input type="hidden" name="comment[commentable_id]" value="<%= params[:comment][:commentable_id] %>">
  <input type="hidden" name="comment[commentable_type]" value="<%= params[:comment][:commentable_type] %>">


  <button name="Add Comment">Add Comment</button>

</form>
